{
    "compilerOptions": {
      "moduleResolution": "Node",
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "lib": ["dom", "ES6"],
      "esModuleInterop": true
    },
    "include": ["src/**/*", "index.d.ts"],
    "exclude": ["node_modules"]    
  }